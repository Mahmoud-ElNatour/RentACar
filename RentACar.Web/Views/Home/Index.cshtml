                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-user-plus me-2"></i>Register Now
