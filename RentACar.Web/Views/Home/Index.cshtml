@using RentACar.Application.DTOs
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var carsCount = ViewBag.CarsCount as int? ?? 0;
    var categories = ViewBag.Categories as List<CategoryDto> ?? new();

   
}
<link rel="stylesheet" href="~/css/index-style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Rent A Car <span class="text-warning">Anytime, Anywhere</span></h1>
                    <p class="hero-subtitle">Book your vehicle with confidence and convenience. Experience premium car rental service with our modern fleet and exceptional customer support.</p>
                    <div class="hero-buttons">
                        @if(User.Identity?.IsAuthenticated ?? false)
                        {
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-warning btn-lg me-3">
                                <i class="fas fa-car me-2"></i>Get Started
                            </a>
                            <a asp-controller="Browse" asp-action="Index" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-search me-2"></i>Browse Cars
                            </a>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning btn-lg me-3">
                                <i class="fas fa-car me-2"></i>Get Started
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-search me-2"></i>Browse Cars
                            </a>
                        }
                    </div>
                    <div class="hero-stats mt-4">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="text-warning mb-1"><span>+</span>@carsCount</h3>
                                    <small class="text-light">Cars Available</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="text-warning mb-1">50+</h3>
                                    <small class="text-light">Locations</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="text-warning mb-1">10k+</h3>
                                    <small class="text-light">Happy Customers</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="https://images.unsplash.com/photo-1503376780353-7e6692767b70?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Economy Car" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-content">
                    <h2 class="section-title">About <span class="text-warning">RentACar</span></h2>
                    <p class="section-subtitle">We are a modern car rental company offering an automated, fast, and user-friendly way to book your next vehicle. Whether online or in-person, your satisfaction is our priority.</p>
                    <div class="about-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-warning me-3"></i>
                            <span>Premium quality vehicles</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-warning me-3"></i>
                            <span>24/7 customer support</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-warning me-3"></i>
                            <span>Flexible rental terms</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-warning me-3"></i>
                            <span>Competitive pricing</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" alt="About Us" class="img-fluid rounded-4">
                </div>
            </div>
        </div>
    </div>
</section>

