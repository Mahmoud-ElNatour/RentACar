    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="cta-title">Ready to Hit the Road?</h2>
                <p class="cta-subtitle">Join thousands of satisfied customers and experience the best car rental service. Sign up now to explore our full collection and get exclusive deals!</p>
                <div class="cta-buttons">
                    @if(User.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-user-plus me-2"></i>Register Now
                        </a>
