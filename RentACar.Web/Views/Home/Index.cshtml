<!-- Car Gallery Section -->
<section id="gallery" class="py-5 bg-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Our <span class="text-warning">Fleet</span></h2>
            <p class="section-subtitle">Explore our premium collection of vehicles</p>
        </div>

        <div class="row g-4">
            @foreach (var cat in categories)
            {
                var imageName = cat.Name?.ToLower().Replace(" ", "_") + ".jpg";
                var imagePath = Url.Content($"~/img/categories/{imageName}");
                <div class="col-lg-4 col-md-6">
                    @if(User.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-controller="Browse" asp-action="Index" asp-route-categoryId="@cat.CategoryId" class="gallery-item d-block">
                            <img src="@imagePath" alt="@cat.Name" class="img-fluid">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h5>@cat.Name</h5>
                                    <p>@cat.Name vehicles</p>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index","Browse", new { categoryId = cat.CategoryId })" class="gallery-item d-block">
                            <img src="https://images.unsplash.com/photo-1549924231-f129b911e442?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="@cat.Name" class="img-fluid">
                            <div class="gallery-overlay">
                                <div class="gallery-content">
                                    <h5>@cat.Name</h5>
                                    <p>@cat.Name vehicles</p>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</section>

<!-- CTA Section -->
