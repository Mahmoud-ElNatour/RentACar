@model RentACar.Application.DTOs.PaymentMethodDto
@{
    ViewData["Title"] = "Add Payment Method";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login-style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
    <div class="container1">
        <div class="login-container">
            <a href="/PaymentMethod" class="btn btn-outline-warning rounded-circle d-inline-flex align-items-center justify-content-center"
               style="width: 40px; height: 40px;" title="Back">
                <i class="fas fa-arrow-left"></i>
            </a>

            <div class="logo-text mt-3">
                <i class="fas fa-money-check-alt fa-lg"></i>
                <div>RentACar</div>
            </div>

            <h2 class="mt-4">Add Payment Method</h2>

            <form id="addMethodForm" class="mt-3">
                <div class="input mb-3">
                    <input asp-for="PaymentMethodName" class="form-control" placeholder="Name" />
                    <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
                </div>

                <button type="submit" class="login-btn w-100">Save</button>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('addMethodForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const form = e.target;
            const data = {
                paymentMethodName: form.PaymentMethodName.value
            };

            const res = await fetch('/api/PaymentMethod', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                window.location.href = '/PaymentMethod';
            } else {
                alert('Failed to add payment method');
            }
        });
    </script>
</body>
</html>
