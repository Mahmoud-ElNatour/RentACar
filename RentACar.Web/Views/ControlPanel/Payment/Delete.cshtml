@model RentACar.Application.DTOs.PaymentDto
@{
    ViewData["Title"] = "Delete Payment";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login-style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
    <div class="container1">
        <div class="login-container text-center">
            <a href="/Payment" class="btn btn-outline-warning rounded-circle d-inline-flex align-items-center justify-content-center" style="width:40px;height:40px" title="Back">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="logo-text mt-3">
                <i class="fas fa-money-check-alt fa-lg"></i>
                <div>RentACar</div>
            </div>
            <h2 class="mb-4">Delete Payment</h2>
            <p>Are you sure you want to delete payment <strong>#@Model.PaymentId</strong>?</p>
            <form id="deletePaymentForm" class="mt-3">
                <input type="hidden" asp-for="PaymentId" />
                <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash-alt me-1"></i> Delete</button>
                <a href="/Payment" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('deletePaymentForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const id = this.PaymentId.value;
            const res = await fetch('/api/Payment/' + id, { method: 'DELETE' });
            if (res.ok) {
                window.location.href = '/Payment';
            } else {
                alert('Failed to delete payment');
            }
        });
    </script>
</body>
</html>