@using Microsoft.IdentityModel.Tokens
@model RentACar.Application.DTOs.BrowseViewDTO

@{
    ViewData["Title"] = "Browse Cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #000; /* Black background */
        color: #f8f9fa; /* Light text for contrast */
    }

    .car-thumb {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 8px;
    }

    .car-card {
        box-shadow: 0 0 8px rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 15px;
        height: 100%;
        display: flex;
        flex-direction: column;
        background-color: #1c1c1c;
        color: white;
        transition: transform 0.2s ease;
        max-width: 260px; /* ðŸ‘ˆ Shrink card width */
        margin: auto;
    }

        .car-card:hover {
            transform: scale(1.03);
            box-shadow: 0 0 16px rgba(255, 255, 255, 0.2);
        }

    .card-title {
        font-weight: 600;
        margin-top: 10px;
    }

    .card-text {
        font-size: 0.9rem;
        margin-bottom: 6px;
        flex-grow: 1;
    }

    .btn-yellow {
        background-color: #ffcc00;
        border: none;
        color: black;
        font-weight: bold;
    }

        .btn-yellow:hover {
            background-color: #e6b800;
        }
</style>

<div class="container py-4">
    <h2 class="mb-4 text-white">Browse Cars</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="name" class="form-control" placeholder="Car Name" value="@Model.FilterName" />
        </div>
        <div class="col-md-3">
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>
                @foreach (var cat in Model.Categories)
                {
                    if (cat.CategoryId == Model.FilterCategoryId)
                    {
                        <option value="@cat.CategoryId" selected>@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" min="0" value="@(Model.FilterMaxPrice?.ToString() ?? "")" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-yellow w-100">Filter</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-2">
        @foreach (var car in Model.Cars)
        {
            string imgSrc;
            if (car.CarImage != null && car.CarImage.Length > 0)
            {
                var base64 = Convert.ToBase64String(car.CarImage);
                imgSrc = $"data:image;base64,{base64}";
            }
            else
            {
                imgSrc = Url.Content("~/images/default-car.png");
            }

            <div class="col">
                <div class="card car-card h-100">
                    <img src="@imgSrc" alt="@car.ModelName" class="car-thumb card-img-top" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.ModelName (@car.ModelYear)</h5>
                        <p class="card-text"><strong>Plate #:</strong> @car.PlateNumber</p>
                        <p class="card-text"><strong>Color:</strong> @(string.IsNullOrEmpty(car.Color) ? "N/A" : car.Color)</p>
                        <p class="card-text"><strong>Price/Day:</strong> @(car.PricePerDay?.ToString("F2") ?? "N/A") $</p>
                        <p class="card-text"><strong>Available:</strong> @(car.IsAvailable ? "Yes" : "No")</p>
                        <p class="card-text"><strong>Category:</strong> @(string.IsNullOrEmpty(car.CategoryName) ? "N/A" : car.CategoryName)</p>
                        @if (car.IsAvailable)
                        {
                            if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Booking" asp-action="Add" asp-route-carId="@car.CarId" class="btn btn-yellow mt-auto">Book</a>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-yellow mt-auto">Book</a>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
