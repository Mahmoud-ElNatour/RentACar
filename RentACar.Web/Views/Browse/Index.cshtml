@using Microsoft.IdentityModel.Tokens
@model RentACar.Application.DTOs.BrowseViewDTO

@{
    ViewData["Title"] = "Browse Cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(180deg, #0e0e0e, #1b1b1b);
        color: var(--text-light, #f8f9fa);
        font-family: 'Poppins', sans-serif;
    }

    .filter-inputs .form-control,
    .filter-inputs .form-select {
        background-color: #2a2a2a;
        border: none;
        color: var(--text-light, #f8f9fa);
    }

        .filter-inputs .form-control:focus,
        .filter-inputs .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 204, 0, 0.25);
        }

    .car-thumb {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .car-card {
        border: none;
        border-radius: 12px;
        background-color: #222;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .car-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
        }

    .card-title {
        font-weight: 600;
        margin-top: 10px;
    }

    .btn-yellow {
        background-color: var(--accent-yellow, #ffcc00);
        border: none;
        color: #000;
        font-weight: 600;
    }

        .btn-yellow:hover {
            background-color: #e6b800;
        }
</style>

<div class="container py-4">
    <h2 class="mb-4 text-white">Browse Cars</h2>

    <form method="get" class="row g-3 mb-4 filter-inputs">
        <div class="col-md-3">
            <input type="text" name="name" class="form-control" placeholder="Car Name" value="@Model.FilterName" />
        </div>
        <div class="col-md-3">
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>
                @foreach (var cat in Model.Categories)
                {
                    if (cat.CategoryId == Model.FilterCategoryId)
                    {
                        <option value="@cat.CategoryId" selected>@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" min="0" value="@(Model.FilterMaxPrice?.ToString() ?? "")" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-yellow w-100">Filter</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var car in Model.Cars)
        {
            string imgSrc;
            if (car.CarImage != null && car.CarImage.Length > 0)
            {
                var base64 = Convert.ToBase64String(car.CarImage);
                imgSrc = $"data:image;base64,{base64}";
            }
            else
            {
                imgSrc = Url.Content("~/images/default-car.png");
            }

            <div class="col">
                <div class="card car-card h-100">
                    <img src="@imgSrc" alt="@car.ModelName" class="car-thumb card-img-top" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.ModelName (@car.ModelYear)</h5>
                        <p class="card-text"><strong>Plate #:</strong> @car.PlateNumber</p>
                        <p class="card-text"><strong>Color:</strong> @(string.IsNullOrEmpty(car.Color) ? "N/A" : car.Color)</p>
                        <p class="card-text"><strong>Price/Day:</strong> @(car.PricePerDay?.ToString("F2") ?? "N/A") $</p>
                        <p class="card-text"><strong>Available:</strong> @(car.IsAvailable ? "Yes" : "No")</p>
                        <p class="card-text"><strong>Category:</strong> @(string.IsNullOrEmpty(car.CategoryName) ? "N/A" : car.CategoryName)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
