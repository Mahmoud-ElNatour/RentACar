@page
@model RegisterModel
@{
    ViewData["Title"] = "Customer Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/control-panel.css" />
    <link rel="stylesheet" href="~/css/register-styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
    <div class="container1">
        <div class="login-container panel-container">
            <div class="logo-text">
                <i class="fas fa-car-side"></i>
                <div>CarRental</div>
            </div>

            <h2 class="panel-title">Create Account</h2>

            <form method="post" enctype="multipart/form-data" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors text-danger" role="alert"></div>
                  
                <div class="input">
                    <input asp-for="Input.FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="input">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="input">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="input">
                    <input asp-for="Input.Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="input">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="input">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <label class="text-light mt-2">Upload Driving License (Front):</label>
                <div class="input">
                    <input asp-for="Input.DrivingLicenseFront" class="form-control" type="file" />
                    <span asp-validation-for="Input.DrivingLicenseFront" class="text-danger"></span>
                </div>

                <label class="text-light">Upload Driving License (Back):</label>
                <div class="input">
                    <input asp-for="Input.DrivingLicenseBack" class="form-control" type="file" />
                    <span asp-validation-for="Input.DrivingLicenseBack" class="text-danger"></span>
                </div>

                <label class="text-light">Upload National ID (Front):</label>
                <div class="input">
                    <input asp-for="Input.NationalIdFront" class="form-control" type="file" />
                    <span asp-validation-for="Input.NationalIdFront" class="text-danger"></span>
                </div>

                <label class="text-light">Upload National ID (Back):</label>
                <div class="input">
                    <input asp-for="Input.NationalIdBack" class="form-control" type="file" />
                    <span asp-validation-for="Input.NationalIdBack" class="text-danger"></span>
                </div>

                <button type="submit" class="signup-btn w-100">Sign Up</button>

                <hr />

                <div class="signup-prompt text-center">
                    <span>Already have an account?</span>
                    <a class="traverse" asp-page="./Login">Log In</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
