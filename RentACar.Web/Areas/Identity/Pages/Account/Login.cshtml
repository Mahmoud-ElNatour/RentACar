@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null; // Optional: Set to "_Layout" if you want to use your master layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/control-panel.css" />
    <link rel="stylesheet" href="~/css/login-style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
    <div class="container1">
        <div class="login-container panel-container">
            <div class="logo-text">
                <i class="fas fa-car-side"></i>
                <div>CarRental</div>
            </div>

            <h2 class="panel-title">Welcome Back</h2>

            <form id="account" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors text-danger" role="alert"></div>

                <div class="input mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="input mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="remember-me mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <input asp-for="Input.RememberMe" type="checkbox" id="remember" />
                        <label asp-for="Input.RememberMe" for="remember">Keep me signed in</label>
                    </div>
                    <a class="traverse" asp-page="./ForgotPassword">Forgot Password?</a>
                </div>

                <button type="submit" class="login-btn w-100">
                    Sign In
                </button>

                <hr class="my-4" />

                <div class="signup-prompt text-center">
                    <span>New to CarRental?</span>
                    <a class="traverse" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create Account</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
